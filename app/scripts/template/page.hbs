{{#if isEditing}}
	{{view Ember.TextArea valueBinding="data" class="blaski-page" id="page-text-area"}}
	<button {{action save target="view"}}>Save</button>
	<button {{action close target="controller"}}>Close</button>
	{{#if isSaving}}
		Saving...
	{{/if}}
{{else}}
	<div class="blaski-page">
		{{{htmlData}}}
		<button {{action edit target="controller"}}>Edit</button>
	</div>
{{/if}}
